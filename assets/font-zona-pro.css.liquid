/* For use in email templates */

@font-face {
  font-family: 'Zona Pro';
  font-display: swap;
  src: url('{{ 'ZonaPro-ExtraLight.woff' | asset_url }}') format('woff'),
  url('{{ 'ZonaPro-ExtraLight.woff2' | asset_url }}') format('woff2');
  font-weight: normal;
  font-style: normal;
}

@font-face {
  font-family: 'Zona Pro';
  font-display: swap;
  src: url('{{ 'ZonaPro-Bold.woff' | asset_url }}') format('woff'),
  url('{{ 'ZonaPro-Bold.woff2' | asset_url }}') format('woff2');
  font-weight: bold;
  font-style: normal;
}
