{%- assign img_url = image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}

<div class="badge badge--right badge--image {{ extra_classes }}">
  <div class="responsive-image">
    <div class="responsive-image__img-wrapper"
         style="padding-top: {{ 1 | divided_by: image.aspect_ratio | times: 100 }}%;">
      <img alt="{{ alt }}"
           src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw=="
           class="responsive-image__img lazyload"
           data-src="{{ img_url }}"
           data-widths="[60, 90, 180, 360, 540]"
           data-aspectratio="{{ image.aspect_ratio }}"
           data-sizes="auto">
      <div class="responsive-image__placeholder"></div>
    </div>
  </div>
</div>