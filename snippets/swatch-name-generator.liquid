{% assign variant_title_dc = variant_title | strip | remove: 'Frame' | remove: 'Lens' | remove: 'Glossy' | downcase %}

{% if variant_title_dc contains '/' %}
  {% assign variant_frame_color = variant_title_dc | split: '/' | first | handleize %}
  {% assign variant_lens_color = variant_title_dc | split: '/' | last | handleize %}
{% else %}
  {% assign variant_frame_color = variant_title_dc | handleize %}
  {% assign variant_lens_color = '' %}
{% endif %}
{% if variant_title_dc contains 'mirror' or variant_title_dc contains 'mirrored' %}
  {% assign variant_lens_color = variant_lens_color | remove: 'mirrored-' %}
  {% assign variant_lens_color = variant_lens_color | remove: 'mirror-' %}
  {% comment %}
  {% assign variant_lens_color = variant_lens_color | prepend: 'mirrored' %}
  {% endcomment %}
{% endif %}

{% if variant_title_dc contains 'rimmed' %}
  {% if variant_lens_color != '' and variant_lens_color != variant_frame_color %}
    {% assign variant_frame_color = variant_frame_color | split: 'rimmed-' | last %}
  {% else %}
    {% assign variant_frame_color = variant_frame_color | remove: 'rimmed-' %}
  {% endif %}
{% endif %}
{% comment %}
{% if variant_frame_color contains 'transparent-' %}
  {% assign variant_frame_color = variant_frame_color | remove: 'transparent-' %}
{% endif %}
{% endcomment %}

{% if variant_lens_color contains 'flashing-' %}
  {% assign variant_lens_color = variant_lens_color | remove: 'flashing-' %}
{% endif %}

{% capture swatch_img_name %}swatch-{{- variant_frame_color -}}{%- if variant_lens_color != '' and variant_lens_color != variant_frame_color -%}-{{- variant_lens_color -}}{%- endif -%}.png{% endcapture %}

