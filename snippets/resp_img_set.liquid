
{%- if widths == blank -%}
{%- assign widths = '[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]' -%}
{%- endif -%}
{%- assign widths_values = widths | replace: '[', '' | replace: ']', ''  | split: ',' -%}
{% for width in widths_values %}
{% assign width_int = width | plus: 0 %}
{% assign img_value = width | strip | append:'x'%}
{% if image.width >= width_int %}{{ image | img_url:img_value}} {{width}}w,{% endif %}
{% endfor %}
