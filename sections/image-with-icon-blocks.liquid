<div class="container">
    <div class="image_icon_blocks">
        {% if section.settings.heading != blank %}
            <div class="heading">{{ section.settings.heading }}</div>
        {% endif %}
        <div class="content">
            {% for block in section.blocks %}
                <div class="item">
                    <div class="image_contents">
                        {% if block.settings.image != blank %}
                            <img src="{{ block.settings.image | img_url: '1000x'}}">                            
                        {% endif %}
                        {% if block.settings.svg != blank %}
                            <div class="icon">{{ block.settings.svg }}</div>
                        {% endif %}
                    </div>
                    {% if block.settings.title != blank %}
                        <div class="title">{{ block.settings.title }}</div>
                    {% endif %}
                    {% if block.settings.description != blank %}
                        <div class="description">{{ block.settings.description }}</div>
                    {% endif %}
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% schema %}
    {
        "name": "Image with icon blocks",
        "class": "image-icon-blocks",
        "settings": [
            {
                "type": "text",
                "id": "heading",
                "label": "Heading",
                "default": "why arizona humane society?"
            },
            {
                "type": "range",
                "id": "padding_top",
                "min": 0,
                "max": 100,
                "step": 5,
                "unit": "px",
                "label": "Padding top",
                "default": 30
            },
            {
                "type": "range",
                "id": "padding_bottom",
                "min": 0,
                "max": 100,
                "step": 5,
                "unit": "px",
                "label": "Padding bottom",
                "default": 30
            }
        ],
        "blocks": [
            {
                "type": "image_icon",
                "name": "Image with icon",
                "settings": [
                    {
                        "type": "image_picker",
                        "id": "image",
                        "label": "Image"
                    },
                    {
                        "type": "html",
                        "id": "svg",
                        "label": "Icon",
                        "default": "<div></div>"
                    },
                    {
                        "type": "richtext",
                        "id": "title",
                        "label": "Title"
                    },
                    {
                        "type": "richtext",
                        "id": "description",
                        "label": "Description"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "Image with icon blocks"
            }
        ]
        
    }
{% endschema %}
<style>
    .image-icon-blocks {
        padding-top: {{section.settings.padding_top | times: 0.5}}px;
        padding-bottom: {{section.settings.padding_bottom | times: 0.5}}px;
        
    }
    @media (min-width: 990px) {
        .image-icon-blocks {
            padding-top: {{section.settings.padding_top}}px;
            padding-bottom: {{section.settings.padding_bottom}}px;
        }
    }
</style>