    }
    .story .desc:before {
      top: auto;
      bottom: -35px;
      right: auto;
      left: -20px;
    } */
  }
</style>


{% schema %}
{
    "name": "Story",
    "settings": [
      {
        "id": "story_title",
        "type": "text",
        "label": "Story title"
      }
    ],
    "blocks": [
    {
      "type": "years-blocks",
      "name": "Years blocks",
      "settings": [
        {
          "id": "years",
          "type": "text",
          "label": "Years"
        },
        {
          "id": "years_img",
          "type": "image_picker",
          "label": "Years img"
        },
        {
          "id": "years_text",
          "type": "textarea",
          "label": "Years text"
        }
      ]
    }      
  ]
 
    
    
}
{% endschema %}