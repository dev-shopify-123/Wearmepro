<div class="" style="background: {{section.settings.bg_color}};">
    <div class="simple_text">
        {% if section.settings.subheading != blank %}
            <div class="subheading">{{ section.settings.subheading }}</div>
        {% endif %}
        {% if section.settings.number_heading != blank or section.settings.heading != blank%}
            <div class="heading_content">
                <div class="number_heading">{{ section.settings.number_heading }}</div>
                <div class="heading">{{ section.settings.heading }}</div>
            </div>
        {% endif %}
        {% if section.settings.subtext != blank %}
            <div class="subheading">{{ section.settings.subtext }}</div>
        {% endif %}
    </div>
</div>
{% schema %}
    {
        "name": "Simple text",
        "class": "simple-text",
        "settings": [
            {
                "type": "text",
                "id": "subheading",
                "label": "Subheading",
                "default": "WE DONATED:"
            },
            {
                "type": "text",
                "id": "number_heading",
                "label": "Number heading",
                "default": "110,000"
            },
            {
                "type": "text",
                "id": "heading",
                "label": "Heading",
                "default": "CANS OF FOOD"
            },
            {
                "type": "text",
                "id": "subtext",
                "label": "Subtext",
                "default": "TO ANIMALLS IN NEED"
            },
            {
                "type": "color",
                "id": "bg_color",
                "label": "Background color"
            },
            {
                "type": "range",
                "id": "padding_top",
                "min": 0,
                "max": 100,
                "step": 5,
                "unit": "px",
                "label": "Padding top",
                "default": 30
            },
            {
                "type": "range",
                "id": "padding_bottom",
                "min": 0,
                "max": 100,
                "step": 5,
                "unit": "px",
                "label": "Padding bottom",
                "default": 30
            }
        ],
        "presets":[{
            "name": "Simple text"
        }]
    }
{% endschema %}
<style>
    .simple-text {
        padding-top: {{section.settings.padding_top | times: 0.5}}px;
        padding-bottom: {{section.settings.padding_bottom | times: 0.5}}px;
        
    }
    @media (min-width: 990px) {
        .simple-text {
            padding-top: {{section.settings.padding_top}}px;
            padding-bottom: {{section.settings.padding_bottom}}px;
        }
    }
</style>
