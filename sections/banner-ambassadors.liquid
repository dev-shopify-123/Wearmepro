  <div class="works-bloks">
    <h2 class="uppercase lg--f2 md-dn--f4 mt0 mb3 ff--heading h-underline text-center">{{ section.settings.works-title }}</h2>
    <div class="row">
      <div class="col">
        
        <div class="box">
          <span>1</span>
          <img src="{{ section.settings.works_image-1 | img_url: 'master' }}" alt="{{  section.settings.works_image-1.alt }}">
          <h3>{{ section.settings.works_title_col-1 }}</h3>
          {{ section.settings.works_text_col-1 }}
        </div>
      </div>
