<div class="container">
    <section class="slider-before">
        <div class="slider-before__desc">
            {{section.settings.text_id}}
        </div>

        <div class="cocoen">
            <img src="{{ section.settings.img_one | img_url: 'master' }}" alt="{{ section.settings.img_one.alt }}">
            <img src="{{ section.settings.img_two | img_url: 'master' }}" alt="{{ section.settings.img_two.alt }}">
        </div>
    </section>
</div>

{% schema %}

{
    "name": "Before after slider",
    "class": "slider-before-section",
    "settings": [
        {
            "type": "richtext",
            "id": "text_id",
            "label": "Text"
        }, {
            "type": "image_picker",
            "id": "img_one",
            "label": "Before image"
        }, {
            "type": "image_picker",
            "id": "img_two",
            "label": "After image"
        }
    ],
    "presets": [
        {
            "name": "Before after slider",
            "category": "New"
        }
    ]
}

{% endschema %}
